# NOTE: Feel free to improve this. Using the "scheme-small" seems to work well
selected_scheme scheme-small
TEXDIR /opt/build/cache/texlive
TEXMFCONFIG $TEXMFSYSCONFIG
TEXMFHOME $TEXMFLOCAL
TEXMFLOCAL /opt/build/cache/texlive/texmf-local
TEXMFSYSCONFIG /opt/build/cache/texlive/texmf-config
TEXMFSYSVAR /opt/build/cache/texlive/texmf-var
TEXMFVAR $TEXMFSYSVAR
binary_x86_64-linux 1
instopt_adjustpath 0
instopt_adjustrepo 1
instopt_letter 0
instopt_portable 1
instopt_write18_restricted 1
tlpdbopt_autobackup 1
tlpdbopt_backupdir tlpkg/backups
tlpdbopt_create_formats 1
tlpdbopt_desktop_integration 1
tlpdbopt_file_assocs 1
tlpdbopt_generate_updmap 0
tlpdbopt_install_docfiles 0
tlpdbopt_install_srcfiles 1
tlpdbopt_post_code 1
tlpdbopt_sys_bin /usr/local/bin
tlpdbopt_sys_info /usr/local/share/info
tlpdbopt_sys_man /usr/local/share/man
tlpdbopt_w32_multi_user 1
